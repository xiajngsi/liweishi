---
current: 发布公告
---
<div id="content">

    {{> content-header }}

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="control-group">
                <div class="span4">
                    <label class="gg-label">公告标题 :</label>
                    <input type="text" class="span8"/>
                </div>
                <div class="span4">
                    <label class="gg-label">公告类别 :</label>
                    <select name="" id="" class="span8">
                        <option value="">类别一</option>
                        <option value="">类别二</option>
                        <option value="">类别三</option>
                    </select>
                </div>
                <div class="span4">
                    <label class="gg-label">发布时间 :</label>
                    <input type="date" class="span8"/>
                </div>
            </div>
        </div>

        <div class="row-fluid">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>wysihtml5</h5>
                    </div>
                    <div class="widget-content">
                        <div class="control-group">
                            <form>
                                <div class="controls">
                                    <textarea class="textarea_editor span12" rows="6" placeholder="Enter text ..."></textarea>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </div>

        <div class="row-fluid">
            <input class="btn btn-info pull-right mg-right30" type="button" value="保存"/>
            <input class="btn btn-info pull-right mg-right30" type="button" value="取消"/>
        </div>


        <div class="row-fluid mgtop10">
            <div class="search-list">
                <div class="span12">
                    <label for="" class="span2" style="width: 10.5%;">公告时间</label>
                    <input type="date" class="span4"/>
                    <input type="date" class="span4"/>
                    <input type="button" class="span2" style="background-color: #000000;color: #ffffff;" />
                </div>
                <div class="span12">
                    <div class="span4">
                    <label for="" class="span4">公告部门</label>
                    <select name="" id="" class="span8"></select>
                    </div>
                    <div class="span4">
                    <label for="" class="span4">公告类别</label>
                    <select name="" id="" class="span8"></select>
                    </div>
                    <div class="span4">
                    <label for="" class="span4">发布状态</label>
                    <select name="" id="" class="span8"></select>
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"><span class="icon"><i class="icon-th"></i></span>
                        <h5>历史公告列表</h5>
                    </div>

                        <!--bootstrap table-->
                        <!--data-url="http://mikepenz.com/jsfiddle/" data-show-refresh="true"-->
                        <table data-toggle="table"
                               data-url="http://mikepenz.com/jsfiddle/"
                               data-pagination="true"
                               data-side-pagination="server"
                               data-page-list="[5, 10, 20, 50, 100, 200]"
                               data-height="490" id="announceTable"
                               data-toolbar="#toolbar">
                            <thead>
                            <tr>
                                <th data-field="state" data-checkbox="true"></th>
                                <th data-field="id" >发布时间</th>
                                <th data-field="name" >更新时间</th>
                                <th data-field="price" >公告类别</th>
                                <th data-field="price" >公告主题</th>
                                <th data-field="price" >公告部门</th>
                                <th data-field="price" >发布人</th>
                                <th data-field="price" >发布状态</th>
                                <th data-field="operate" data-sortable="true" data-formatter="announceOpe"
                                    data-events="operateEvents">操作</th>
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
