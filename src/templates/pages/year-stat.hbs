---
current: 年度汇总统计
---

<div id="content">
  {{> content-header }}
    <div class="container-fluid">
      {{> sales-top }}

        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"><span class="icon"><i class="icon-th"></i></span>
                        <h5>用户列表</h5>
                        <select name="" id="" class="table-top-select">
                            <option value="2015">2015</option>
                            <option value="2014">2014</option>
                            <option value="2013">2013</option>
                            <option value="2012">2012</option>
                        </select>
                        <div class="pull-right statistic">共100项总金额1000元</div>
                    </div>
                    <table data-toggle="table"
                           data-url="http://mikepenz.com/jsfiddle/"
                           data-side-pagination="server"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
                           data-height="490" id="salestable"
                           data-toolbar="#toolbar">
                        <thead>
                        <tr>
                            <th data-field="id" >年度</th>
                            <th data-field="name">月份</th>
                            <th data-field="price" >单店数量</th>
                            <th data-field="name">金额</th>
                            <th data-field="name">总部数量</th>
                            <th data-field="name">金额</th>
                            <th data-field="name">分店数量</th>
                            <th data-field="name">金额</th>
                            <th data-field="name">短信数量</th>
                            <th data-field="name">金额</th>
                            <th data-field="name">商品数量</th>
                            <th data-field="name">金额</th>
                            <th data-field="name">合计金额</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-signal"></i> </span>
                        <h5>6月平台数量分析图</h5>
                    </div>
                    <div class="widget-content">
                        <div id="platAnalysisChat"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-signal"></i> </span>
                        <h5>销量图</h5>
                    </div>
                    <div class="widget-content">
                        <div id="salesVolumeChar"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

